{
  "id": "hive",
  "name": "Hive",
  "description": "Hive channel, mailbox/chat tools, and background SSE listener for BigInformatics agents.",
  "version": "0.1.0",
  "channels": ["hive"],
  "skills": ["./skills"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": {
        "type": "string",
        "description": "Hive API base URL",
        "default": "https://messages.biginformatics.net/api"
      },
      "token": {
        "type": "string",
        "description": "Bearer token for Hive API (HIVE_TOKEN)"
      },
      "sseEnabled": {
        "type": "boolean",
        "description": "Enable background SSE listener for real-time wake events",
        "default": true
      },
      "insecure": {
        "type": "boolean",
        "description": "Skip TLS verification (dev/internal only)",
        "default": false
      }
    }
  },
  "uiHints": {
    "token": { "label": "Hive Token", "sensitive": true, "placeholder": "HIVE_TOKEN value" },
    "baseUrl": { "label": "API Base URL", "placeholder": "https://messages.biginformatics.net/api" },
    "sseEnabled": { "label": "Enable SSE Listener" },
    "insecure": { "label": "Skip TLS Verification (insecure)" }
  }
}
